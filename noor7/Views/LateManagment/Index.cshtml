


    <div>

        @using (Html.BeginForm("AddLate", "LateManagment"))
        {


            <div class="row" style="width:90%;margin:0 auto; padding:5px;">


                <form class="form-inline">
                    <input id="selectedStudent" list="search-report" class="form-control col-md-2" placeholder="نام و نام خانوادگی">
                    <datalist id="search-report">

                        @foreach (var item in ViewBag.students)
                        {
                            <option value="@item.Id">@item.FirstName @item.LastName @item.Class</option>
                        }


                    </datalist>

                    

                    <input id="lateDate" class="form-control col-md-3" placeholder="تاریخ">
                    <input id="howMuch" class="form-control col-md-1" placeholder="میزان تاخیر">
                    <input id="problem" class="form-control col-md-1" placeholder="مشکل">
                    <div class="form-group col-md-2">
                        <label for="isTrue">موجه :</label>
                        <input name="isTrue" type="checkbox" id="isTrue" class="form-control" value="موجه">
                    </div>

                    <input type="button" class="btn btn-success" value="ثبت" onclick="sendJsonDataForLate();">



                </form>
            </div> 





        }

</div>



<div style="position:absolute;bottom:70px">
    @Html.ActionLink("بازگشت به پنل کاربری", "Index", "Home")
</div>


